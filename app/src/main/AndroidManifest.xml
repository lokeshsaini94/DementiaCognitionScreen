<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hku.demscreen.hk">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="Results" />
        <activity
            android:name=".ModulesActivity"
            android:label="Tasks"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Module00Activity"
            android:label="@string/module_00"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module01Activity"
            android:label="@string/picture_naming"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module02Activity"
            android:label="@string/picture_pointing"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module03Activity"
            android:label="@string/word_learning"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module04Activity"
            android:label="@string/orientation"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module05Activity"
            android:label="@string/figure_copy"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module08Activity"
            android:label="@string/verbal_memory"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module09Activity"
            android:label="@string/episodic_memory"
            android:parentActivityName=".ModulesActivity" />
        <activity
            android:name=".Module10Activity"
            android:label="@string/attention"
            android:parentActivityName=".ModulesActivity" />
    </application>

</manifest>